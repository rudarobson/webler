#! /usr/bin/env node

var webler = require('./webler.js');
var path = require('path');
var yargs = require('yargs')
  .usage('Usage: weble [config]')
  .help('h')
  .alias('h', 'help');

var argv = yargs.argv;

if (argv.help) {
  console.log(yargs.help());
}

var _ = argv._;
argv._ = undefined;

var f = require(path.resolve(process.cwd(), 'Webler.js'));
f.call(webler, _[0]);
