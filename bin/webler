#! /usr/bin/env node

var yargs = require('yargs')
  .usage('Usage: webler <command> [options]')
  .help('h')
  .alias('h', 'help')

  .command('watch')
  //.demand(1,'<directory> [configuration]')


  .command('weble')
//  .demand(1,'<configuration>')

  .command('init')
  //.demand(0)

var argv = yargs.argv;

if (argv.help) {
  console.log(yargs.help());
}

var _ = argv._;

var command = _[0];
_.splice(0, 1);//remove the command
var launcher = require('./launcher');

launcher[command](argv);
